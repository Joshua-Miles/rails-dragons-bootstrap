<%= form_for @dragon do |f| %>
  <div class="form-group">
    <%= f.label :name %>:
    <%= f.text_field :name, class:'form-control' %><br />
  </div>
  <div class="form-group">
    <%= f.label :power_type %>:
    <%= f.text_field :power_type, class:'form-control' %><br />
  </div>
  <div class="form-group">
    <%= f.label :user %>:
    <%= f.collection_select :user_id, User.all, :id, :name  %><br />
  </div>
  <%= f.submit %>
  
<% end %>