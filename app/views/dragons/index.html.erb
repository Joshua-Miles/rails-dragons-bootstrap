<h1>Dragon Index</h1>

<div id="carouselExampleControls" class="carousel slide bg-dark" data-ride="carousel">
  <div class="carousel-inner">
	<% @dragons.each do |dragon| %>
		<div class="carousel-item text-center <%= dragon == @dragons.first ? 'active' : '' %>">
			<div style="width:800px; height:400px" class="d-block w-100" >
				<h3><%= link_to dragon.name, dragon, style:'color: white!important;' %></h3>
				<ul class="list-group">
					<li class="list-group-item">Name: <%= dragon.name %></li>
					<li class="list-group-item">Power Type: <%= dragon.power_type %></li>
					
				</ul>
			</div>
		</div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<%= link_to "Add Dragon", new_dragon_path %>
