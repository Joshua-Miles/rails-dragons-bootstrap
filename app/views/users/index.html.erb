<h1>Masters Index</h1>


<div class="accordion">
	<% @users.each do |user| %>
		<div class="card">
			<div class="card-header" id="headingOne">
				<h5 class="mb-0">
					<%= link_to user.name, user %>
				</h5>
				<button class="badge badge-primary cursor-pointer float-right" type="button" data-toggle="collapse" data-target="#user-<%= user.id %>">
					(Toggle Dragons)
				</button>
			</div>
			<div id="user-<%= user.id %>" class="collapse">
				<div class="card-body">
					<ul>
					<% user.dragons.each do | dragon | %>
						<li><%= link_to dragon.name, dragon %></li>
					<% end %>
					<ul>
				</div>
			</div>
		</div>
	<% end %>
</div>
<%= link_to "Add Master", new_user_path %>